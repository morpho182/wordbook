<div class='text-center'>
  <h1>Words#id:<%= @word.id %></h1>
</div>

<table class="table table-striped table-bordered col-sm-6 offset-sm-3">
  <tr>
    <td>Word</td>
    <td><%= @word.word %></td>  </tr>
  <tr>
    <td>Definition</td>
    <td><%= @word.definition %></td>
  </tr>
  <tr>
    <td>Link</td>
    <td><%= @word.link %></td>
  </tr>
  <tr>
    <td>Folder</td>
    <td>
      <% @word.folders.each do |folder| %>
        <%= folder.name %> ,
      <% end %>
    </td>
  </tr>
</table>
<div class="text-center">
  <%= link_to '編集', edit_word_path(@word), class: 'btn btn-primary' %> 
  <%= link_to '削除', @word, method: :delete, data: { confirm: '本当に削除してよろしいですか？' }, class: 'btn btn-danger' %>
</div>
