<div class="text-center">
  <h1>My Profile</h1>
</div>
<div class="row">
  <table class="table table-striped table-bordered col-sm-6 offset-sm-3">
    <tr>
      <td>Name</td>
      <td><%= @user.name %></td>
    </tr>
    <tr>
      <td>Email</td>
      <td><%= @user.email %></td>
    </tr>
  </table>
</div>
<div class="text-center">
  <%= link_to 'My Profile 編集', edit_user_path(@user.id), class: 'btn btn-primary' %> 
  <%= link_to 'Password 変更', edit_passwords_path(@user.id), class: 'btn btn-primary' %> 
</div>